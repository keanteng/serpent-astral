datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  age   Int
}

model Employee {
  id             String  @id @default(cuid())
  age            Int
  name           String
  gender         String
  date_of_birth  DateTime
  address        String
  state          String
  phone_number   String
  email          String  @unique
  nationality    String
  resident_status String
  marital_status String
  role           String
  salary         Int
  hire_date      DateTime
  epf_number     Int
  socso_number   Int
  bank_account   String
}